{
  "manifest_version": 3,
  "name": "AI Code",
  "version": "1.0.0",
  "description": "AI coding assistant in Chrome DevTools for CodePen",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://codepen.io/*",
    "https://*.codepen.io/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": [
        "https://codepen.io/*",
        "https://*.codepen.io/*"
      ],
      "js": ["inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://codepen.io/*",
        "https://*.codepen.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
